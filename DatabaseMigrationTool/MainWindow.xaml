<Window x:Class="DatabaseMigrationTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatabaseMigrationTool"
        mc:Ignorable="d"
        Title="Database Migration Tool" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen" 
        MinWidth="1200" 
        MinHeight="700"
        Icon="app-icon.png">

    <Window.Resources>
        <!-- Modern Color Palette -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#2563EB"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#64748B"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#10B981"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#F8FAFC"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TextBrush" Color="#1E293B"/>
        <SolidColorBrush x:Key="MutedTextBrush" Color="#64748B"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#EF4444"/>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            TextBlock.FontWeight="{TemplateBinding FontWeight}"
                                            TextBlock.FontSize="{TemplateBinding FontSize}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1D4ED8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1E40AF"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#94A3B8"/>
                                <Setter Property="Foreground" Value="#CBD5E1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="{StaticResource SecondaryBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#475569"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Success Button Style -->
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern Card Style -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern GroupBox Style -->
        <Style TargetType="GroupBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Border Style="{StaticResource Card}" Padding="20">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="{TemplateBinding Header}" 
                                          FontSize="18" 
                                          FontWeight="SemiBold" 
                                          Foreground="{StaticResource TextBrush}"
                                          Margin="0,0,0,16"/>
                                <ContentPresenter Grid.Row="1"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,6"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,6"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>


        <!-- Modern ComboBox Style -->
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,6"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Modern CheckBox Style -->
        <Style TargetType="CheckBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Modern Label Style -->
        <Style TargetType="Label">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Modern RadioButton Style -->
        <Style TargetType="RadioButton">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,20,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.4*"/>
        </Grid.RowDefinitions>

        <!-- Header Bar -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="30,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Database Migration Tool" 
                              FontSize="28" 
                              FontWeight="Bold" 
                              Foreground="White"/>
                    <TextBlock Text="Professional database migration with advanced features" 
                              FontSize="16" 
                              Foreground="#E2E8F0" 
                              Margin="0,6,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#19FFFFFF" CornerRadius="20" Padding="15,8">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="12" Height="12" Fill="#10B981" Margin="0,0,8,0"/>
                            <TextBlock Name="lblStatus" 
                                      Text="Ready" 
                                      FontSize="14" 
                                      Foreground="White" 
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                     PanningMode="VerticalOnly">
            <StackPanel Margin="20,20">
                
                <!-- Top Section - Connection Setup Cards -->
                <Grid Margin="0,0,0,40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Server Connection Card -->
                    <GroupBox Grid.Column="0" Header="🌐 Database Connection">
                        <StackPanel>
                            <Label Content="Server Name" FontWeight="SemiBold"/>
                            <ComboBox Name="cmbServer" IsEditable="True" 
                                     SelectionChanged="Server_SelectionChanged"/>

                            <CheckBox Name="chkWindowsAuth" Content="Use Windows Authentication" 
                                     IsChecked="True" Checked="WindowsAuth_Changed" 
                                     Unchecked="WindowsAuth_Changed" Margin="0,16,0,0"/>

                            <Grid Name="sqlAuthPanel" Visibility="Collapsed" Margin="0,16,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Label Grid.Row="0" Content="Username" FontWeight="SemiBold"/>
                                <TextBox Grid.Row="1" Name="txtUsername"/>
                                <Label Grid.Row="2" Content="Password" FontWeight="SemiBold"/>
                                <PasswordBox Grid.Row="3" Name="txtPassword"/>
                            </Grid>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,25,0,0">
                                <Button Name="btnTestConnection" Content="Test Connection" 
                                       Style="{StaticResource SecondaryButton}" 
                                       Click="TestConnection_Click" Margin="0,0,12,0"/>
                                <Button Name="btnRefreshDatabases" Content="Load Databases" 
                                       Style="{StaticResource SuccessButton}" 
                                       Click="RefreshDatabases_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <!-- Source Database Card -->
                    <GroupBox Grid.Column="1" Header="📂 Source Database">
                        <StackPanel>
                            <Label Content="Select Source Database" FontWeight="SemiBold"/>
                            <ComboBox Name="cmbSourceDatabase" 
                                     SelectionChanged="SourceDatabase_SelectionChanged"/>

                            <Button Name="btnLoadProcedures" Content="🔄 Load Database Objects" 
                                   Style="{StaticResource ModernButton}" 
                                   Click="LoadStoredProcedures_Click" 
                                   HorizontalAlignment="Stretch" 
                                   Margin="0,20,0,0"/>
                                   
                            <!-- Quick Info Panel -->
                            <Border Background="{StaticResource BackgroundBrush}" 
                                   BorderBrush="{StaticResource BorderBrush}"
                                   BorderThickness="1" CornerRadius="10" 
                                   Padding="20" Margin="0,25,0,0">
                                <StackPanel>
                                    <TextBlock Text="📊 Database Summary" FontWeight="SemiBold" 
                                              HorizontalAlignment="Center" Margin="0,0,0,12"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Stored Procedures:" FontSize="13"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Name="lblTotalProcedures" Text="0" 
                                                  HorizontalAlignment="Right" FontWeight="Bold" 
                                                  Foreground="{StaticResource PrimaryBrush}" FontSize="16"/>
                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Tables:" FontSize="13"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" Name="lblTotalTables" Text="0" 
                                                  HorizontalAlignment="Right" FontWeight="Bold" 
                                                  Foreground="{StaticResource AccentBrush}" FontSize="16"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </GroupBox>

                    <!-- Target Configuration Card -->
                    <GroupBox Grid.Column="2" Header="⚙️ Target Configuration">
                        <StackPanel Name="stkTargetConfiguration">
                            <!-- Server Type Selector -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                                <TextBlock Name="lblTargetMode" Text="📍 Same Server" FontWeight="SemiBold" FontSize="14" 
                                          Foreground="{StaticResource PrimaryBrush}" VerticalAlignment="Center"/>
                                <Button Name="btnDifferentServer" Content="🔗 Different Server" 
                                       Style="{StaticResource SecondaryButton}" 
                                       Click="DifferentServer_Click"
                                       Margin="15,0,0,0" Height="32" Padding="12,6"/>
                                <Button Name="btnSameServer" Content="📍 Same Server" 
                                       Style="{StaticResource SecondaryButton}" 
                                       Click="SameServer_Click"
                                       Margin="15,0,0,0" Height="32" Padding="12,6" Visibility="Collapsed"/>
                            </StackPanel>

                            <!-- Current Target Configuration -->
                            <StackPanel Name="stkCurrentTarget" Margin="15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" Name="lblCurrentServer" Content="Target Database" FontWeight="SemiBold"/>
                                    <Button Grid.Column="1" Name="btnFullscreenTargetDatabases" Content="🔍" 
                                           ToolTip="Open fullscreen database selector"
                                           Style="{StaticResource SecondaryButton}" 
                                           Click="FullscreenTargetDatabases_Click"
                                           Width="32" Height="32" Padding="6" FontSize="12"/>
                                </Grid>
                                <ListBox Name="lstTargetDatabases" Height="100" 
                                        Background="{StaticResource SurfaceBrush}"
                                        BorderBrush="{StaticResource BorderBrush}"
                                        BorderThickness="1">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding Name}" 
                                                     IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                     Checked="TargetDatabaseCheckBox_Changed"
                                                     Unchecked="TargetDatabaseCheckBox_Changed"
                                                     Margin="5,2"
                                                     Foreground="{StaticResource TextBrush}"
                                                     FontSize="14"/>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                                <TextBlock Name="txtSelectedDatabasesCount" Text="0 database(s) selected" 
                                          Margin="0,10,0,0" FontSize="12" 
                                          Foreground="{StaticResource MutedTextBrush}"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                </Grid>
                
                <!-- Main Content Section - Database Objects and Actions -->
                <Grid Margin="0,0,0,40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2.5*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Database Objects Section -->
                    <GroupBox Grid.Column="0" Header="📋 Database Objects Selection" Margin="0,0,20,0">
                        <TabControl Name="tabDatabaseObjects" SelectionChanged="TabDatabaseObjects_SelectionChanged">
                            <!-- Stored Procedures Tab -->
                            <TabItem Header="📋 Stored Procedures" FontSize="14">
                                <Grid Margin="20">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Search Box -->
                                    <StackPanel Grid.Row="0" Margin="0,0,0,20">
                                        <Label Content="🔍 Search Stored Procedures" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                        <TextBox Name="txtSearchProcedures" 
                                            TextChanged="SearchProcedures_TextChanged"
                                            FontSize="14" Height="35" 
                                            Padding="10,8"
                                            Foreground="Black"/>
                                    </StackPanel>

                                    <!-- Selection Controls -->
                                    <Grid Grid.Row="1" Margin="0,0,0,20">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                                            <CheckBox Name="chkSelectAll" 
                                                     Content="✓ Select All" 
                                                     Checked="SelectAll_Checked" 
                                                     Unchecked="SelectAll_Unchecked"
                                                     FontSize="15" FontWeight="SemiBold"
                                                     Foreground="{StaticResource PrimaryBrush}"/>
                                            <Button Content="Clear All" 
                                                   Click="ClearAll_Click"
                                                   Style="{StaticResource ModernButton}"
                                                   Background="#EF4444"
                                                   Margin="20,0,0,0"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                            <Border Background="{StaticResource BackgroundBrush}" 
                                                   CornerRadius="15" Padding="12,6">
                                                <TextBlock Name="txtProcedureCount" 
                                                          Text="0 procedures" 
                                                          FontSize="13" FontWeight="Medium"
                                                          Foreground="{StaticResource TextBrush}"/>
                                            </Border>
                                            <Border Background="{StaticResource AccentBrush}" 
                                                   CornerRadius="15" Padding="12,6" Margin="10,0,0,0">
                                                <TextBlock Name="txtSelectedProceduresCount" 
                                                          Text="0 selected" 
                                                          FontSize="13" FontWeight="Bold"
                                                          Foreground="White"/>
                                            </Border>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Procedures List -->
                                    <Border Grid.Row="2" BorderBrush="{StaticResource BorderBrush}" 
                                           BorderThickness="1" CornerRadius="10">
                                        <ListBox Name="lstStoredProcedures" 
                                            SelectionMode="Extended" 
                                            Background="{StaticResource SurfaceBrush}"
                                            BorderThickness="0"
                                            Padding="10"
                                            ScrollViewer.CanContentScroll="True"
                                            VirtualizingPanel.IsVirtualizing="True"
                                            VirtualizingPanel.VirtualizationMode="Recycling">
                                            <ListBox.ItemContainerStyle>
                                                <Style TargetType="ListBoxItem">
                                                    <Setter Property="Margin" Value="0"/>
                                                    <Setter Property="Padding" Value="2"/>
                                                    <Setter Property="Height" Value="28"/>
                                                </Style>
                                            </ListBox.ItemContainerStyle>
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <CheckBox Content="{Binding FullName}" 
                                                         IsChecked="{Binding IsSelected}" 
                                                         Tag="{Binding}" 
                                                         Checked="ProcedureCheckBox_Changed" 
                                                         Unchecked="ProcedureCheckBox_Changed"
                                                         Margin="4,2" FontSize="12" Height="24"/>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </Border>
                                </Grid>
                            </TabItem>

                            <!-- Tables Tab -->
                            <TabItem Header="🗂️ Tables" FontSize="14">
                                <Grid Margin="20">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Search Box -->
                                    <StackPanel Grid.Row="0" Margin="0,0,0,20">
                                        <Label Content="🔍 Search Tables" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                        <TextBox Name="txtSearchTables" 
                                            TextChanged="SearchTables_TextChanged"
                                            FontSize="14" Height="35" 
                                            Padding="10,8"
                                            Foreground="Black"
                                          />
                                    </StackPanel>

                                    <!-- Selection Controls -->
                                    <Grid Grid.Row="1" Margin="0,0,0,20">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                                            <CheckBox Name="chkSelectAllTables" 
                                                     Content="✓ Select All" 
                                                     Checked="SelectAllTables_Checked" 
                                                     Unchecked="SelectAllTables_Unchecked"
                                                     FontSize="15" FontWeight="SemiBold"
                                                     Foreground="{StaticResource AccentBrush}"/>
                                            <Button Content="Clear All" 
                                                   Click="ClearAllTables_Click"
                                                   Style="{StaticResource ModernButton}"
                                                   Background="#EF4444"
                                                   Margin="20,0,0,0"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                            <Border Background="{StaticResource BackgroundBrush}" 
                                                   CornerRadius="15" Padding="12,6">
                                                <TextBlock Name="txtTableCount" 
                                                          Text="0 tables" 
                                                          FontSize="13" FontWeight="Medium"
                                                          Foreground="{StaticResource TextBrush}"/>
                                            </Border>
                                            <Border Background="{StaticResource PrimaryBrush}" 
                                                   CornerRadius="15" Padding="12,6" Margin="10,0,0,0">
                                                <TextBlock Name="txtSelectedTablesCount" 
                                                          Text="0 selected" 
                                                          FontSize="13" FontWeight="Bold"
                                                          Foreground="White"/>
                                            </Border>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Tables List -->
                                    <Border Grid.Row="2" BorderBrush="{StaticResource BorderBrush}" 
                                           BorderThickness="1" CornerRadius="10">
                                        <ListBox Name="lstTables" 
                                            SelectionMode="Extended" 
                                            Background="{StaticResource SurfaceBrush}"
                                            BorderThickness="0"
                                            Padding="10"
                                            ScrollViewer.CanContentScroll="True"
                                            VirtualizingPanel.IsVirtualizing="True"
                                            VirtualizingPanel.VirtualizationMode="Recycling">
                                            <ListBox.ItemContainerStyle>
                                                <Style TargetType="ListBoxItem">
                                                    <Setter Property="Margin" Value="0"/>
                                                    <Setter Property="Padding" Value="2"/>
                                                    <Setter Property="Height" Value="28"/>
                                                </Style>
                                            </ListBox.ItemContainerStyle>
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <CheckBox Content="{Binding FullName}" 
                                                         IsChecked="{Binding IsSelected}" 
                                                         Tag="{Binding}" 
                                                         Checked="TableCheckBox_Changed" 
                                                         Unchecked="TableCheckBox_Changed"
                                                         Margin="4,2" FontSize="12" Height="24"/>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </Border>
                                </Grid>
                            </TabItem>
                        </TabControl>
                    </GroupBox>
                    
                    <!-- Actions and Control Panel -->
                    <GroupBox Grid.Column="1" Header="🚀 Migration Control">
                        <StackPanel VerticalAlignment="Top">
                            <!-- Primary Action Buttons -->
                            <Button Name="btnGenerateTargetSettings" Content="📋 Generate Settings" 
                                   Style="{StaticResource ModernButton}" 
                                   Click="GenerateTargetSettings_Click" 
                                   Margin="0,0,0,15"
                                   HorizontalAlignment="Stretch"/>
                            
                            <Button Name="btnPreviewScripts" Content="👁️ Preview Scripts" 
                                   Style="{StaticResource SecondaryButton}" 
                                   Click="PreviewScripts_Click" 
                                   Margin="0,0,0,15"
                                   HorizontalAlignment="Stretch"/>
                            
                            <Button Name="btnStartMigration" Content="🚀 Start Migration" 
                                   Style="{StaticResource SuccessButton}" 
                                   Click="StartMigration_Click" 
                                   HorizontalAlignment="Stretch"/>
                                   
                            <Separator Margin="0,30,0,25" Background="{StaticResource BorderBrush}"/>
                            
                            <!-- Migration Options -->
                            <TextBlock Text="Migration Options" FontWeight="SemiBold" 
                                      Foreground="{StaticResource TextBrush}" 
                                      HorizontalAlignment="Center" Margin="0,0,0,15"
                                      FontSize="16"/>
                            
                            <CheckBox Content="Replace existing objects" Name="chkReplaceExistingOption"
                                     Margin="0,0,0,10"/>
                            <CheckBox Content="Create backup first" IsChecked="True"
                                     Margin="0,0,0,10"/>
                            <CheckBox Content="Continue on errors" 
                                     Margin="0,0,0,10"/>
                            <CheckBox Content="Validate after migration" IsChecked="True"
                                     Margin="0,0,0,25"/>
                                     
                            <!-- Status Panel -->
                            <Border Background="{StaticResource BackgroundBrush}" 
                                   BorderBrush="{StaticResource BorderBrush}"
                                   BorderThickness="1" CornerRadius="12" Padding="20">
                                <StackPanel>
                                    <TextBlock Text="📊 Migration Status" FontWeight="SemiBold" 
                                              HorizontalAlignment="Center" 
                                              Foreground="{StaticResource PrimaryBrush}" 
                                              Margin="0,0,0,15" FontSize="16"/>
                                    
                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Status:" FontSize="13"/>
                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                            <Ellipse Width="10" Height="10" Fill="#10B981" Margin="0,0,8,0"/>
                                            <TextBlock Text="Ready" FontWeight="Bold" FontSize="13"/>
                                        </StackPanel>
                                    </Grid>
                                    
                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Objects:" FontSize="13"/>
                                        <TextBlock Grid.Column="1" Text="0/0" FontWeight="Bold" FontSize="13"/>
                                    </Grid>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Progress:" FontSize="13"/>
                                        <TextBlock Grid.Column="1" Text="0%" FontWeight="Bold" FontSize="13"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer - Migration Log -->
        <GroupBox Grid.Row="2" Header="📊 Migration Log" Margin="20,15,20,20">
            <Border CornerRadius="8" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                <TextBox Name="txtMigrationLog" 
                        IsReadOnly="True" 
                        Background="{StaticResource BackgroundBrush}"
                        FontFamily="Consolas"
                        FontSize="12"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto"
                        HorizontalScrollBarVisibility="Auto"
                        BorderThickness="0"
                        Padding="15"/>
            </Border>
        </GroupBox>
    </Grid>
</Window>
